
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}


include author
  
block beforeContent
  div.article-header
block content
  h1= page.title
  p.date= moment.utc(page.date).format('DD. MMMM YYYY')
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.articles-footer
    - var articles = env.helpers.getArticles(contents);
    for a in articles
      article.card.small
        a(href=a.url)= a.title
